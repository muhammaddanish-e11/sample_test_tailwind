<%= turbo_frame_tag "user_data" do %>
  <%= form_for(@user, url: users_path ,html:{data:{ controller: "user-data"}}) do |form| %>
    <section class="fixed top-0 left-0 right-0 bottom-0 flex items-center w-full h-full p-4 bg-coolGray-800 bg-opacity-80 overflow-y-auto bg-gray-700">
      <div class="max-w-lg w-full m-auto p-8 bg-white rounded-md">
        <ul class="flex flex-wrap -m-1.5 justify-end mb-2">
          <li class="p-1.5">
            <a class="inline-block w-3 h-3 bg-coolGray-100 rounded-full bg-gray-100 bg-orange-400" href="#">
              <span class="text-gray-400 text-xxs border p-1 rounded-full bg-orange-400 hidden">1</span>
            </a>
          </li>
          <li class="p-1.5"><a class="inline-block w-3 h-3 rounded-full bg-gray-100" href="#"></a></li>
          <li class="p-1.5"><a class="inline-block w-3 h-3 bg-coolGray-100 rounded-full bg-gray-100" href="#"></a></li>
          <li class="p-1.5"><a class="inline-block w-3 h-3 bg-coolGray-100 rounded-full bg-gray-100" href="#"></a></li>
          <li class="p-1.5"><a class="inline-block w-3 h-3 bg-coolGray-100 rounded-full bg-gray-100" href="#"></a></li>
          <li class="p-1.5"><a class="inline-block w-3 h-3 bg-coolGray-100 rounded-full bg-gray-100" href="#"></a></li>
        </ul>
        <div class="bg-coolGray-50 rounded-md mb-5 p-1 border-b border-gray-100">
          <img class="mx-auto object-cover h-36" src="https://static.shuffle.dev/uploads/files/b8/b8308e780b75f7bf1e1abc86fae652e3b7ff5634/Name-Icon-1.png" alt="">
        </div>
        <p class="font-semibold text-coolGray-900 text-lg">User Data</p>
        <p class="mb-6 text-sm text-coolGray-500 text-gray-300">Please enter your details below.</p>

        <div class="flex w-full">
          <div class="flex flex-wrap -m-3 mb-2 pr-2">
            <div class="w-full md:flex-1 p-3">
              <p class="mb-1.5 font-medium text-coolGray-800 text-sm text-gray-600">First Name</p>
              <%= form.text_field :first_name, { class:"w-full px-4 py-2.5 text-base text-coolGray-900 font-normal outline-none focus:border-green-500 border border-coolGray-200 rounded-lg shadow-input h-10 border-gray-200",
                placeholder:"", data:{ user_data_target:"firstName",action:"input->user-data#focusFirstName"} } %>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <p class="text-xs text-red-500 my-1 hidden" data-user-data-target="firstNameError">please enter first name</p>
            </div>
          </div>
          <div class="flex flex-wrap -m-3 mb-2 pl-2">
            <div class="w-full md:flex-1 p-3">
              <p class="mb-1.5 font-medium text-coolGray-800 text-sm text-gray-600">Last Name</p>
              <%= form.text_field :last_name, { class:"w-full px-4 py-2.5 text-base text-coolGray-900 font-normal outline-none focus:border-green-500 border border-coolGray-200 rounded-lg shadow-input h-10 border-gray-200",
                placeholder:"", data:{ user_data_target:"lastName",action:"input->user-data#focusLastName"} } %>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <p class="text-xs text-red-500 my-1 hidden" data-user-data-target="lastNameError">please enter last name</p>

            </div>    
          </div>
        </div>


        <div class="flex w-full">
          <div class="flex flex-wrap -m-3 mb-2 pr-2">
            <div class="w-full md:flex-1 p-3">
              <p class="mb-1.5 font-medium text-coolGray-800 text-sm text-gray-600">Nick Name</p>
              <%= form.text_field :nick_name, class:"w-full px-4 py-2.5 text-base text-coolGray-900 font-normal outline-none focus:border-green-500 border border-coolGray-200 rounded-lg shadow-input h-10 border-gray-200", placeholder:"" %>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
            </div>    
          </div>
          <div class="flex flex-wrap -m-3 mb-2 pl-2">
            <div class="w-full md:flex-1 p-3">
              <p class="mb-1.5 font-medium text-coolGray-800 text-sm text-gray-600">Phone Number</p>
              <%= form.text_field :phone_number,{ class:"w-full px-4 py-2.5 text-base text-coolGray-900 font-normal outline-none focus:border-green-500 border border-coolGray-200 rounded-lg shadow-input h-10 border-gray-200",
                placeholder:"", maxlength: 12, data: {action:"input->user-data#formatPhoneNumber blur->user-data#validatePhoneNumber input->user-data#focusPhoneNumber", user_data_target: "phoneNumber" } } %>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
              <p class="text-xs text-red-500 my-1 hidden" data-user-data-target="phoneError">please enter valid number</p>
            </div>    
          </div>
        </div>

        <div class="flex flex-wrap -m-3 mb-2">
          <div class="w-full md:flex-1 p-3">
            <p class="mb-1.5 font-medium text-coolGray-800 text-sm text-gray-600">Email</p>
            <%= form.email_field :email, { class:"w-full px-4 py-2.5 text-base text-coolGray-900 font-normal outline-none focus:border-green-500 border border-coolGray-200 rounded-lg shadow-input h-10 border-gray-200",
              placeholder:"", data: { action:"blur->user-data#validateEmailAddress input->user-data#focusEmailAddress", user_data_target: "emailAddress" } }   %>
            <p class="text-xs text-red-500 my-1 hidden" data-user-data-target="emailError">please enter valid email address</p>
          </div>
        </div>

        <div class="flex -m-2">
          <div class="w-full p-2">
            <button class="flex flex-wrap justify-center w-full px-4 py-2.5 bg-white font-medium text-base text-coolGray-500 hover:text-coolGray-600 border border-coolGray-200 hover:border-coolGray-300 rounded-md shadow-button">
              <p>Cancel</p>
            </button>
          </div>
          <div class="w-full p-2">
            <button class="flex flex-wrap justify-center w-full px-4 py-2.5 font-medium text-base text-white border rounded-md shadow-button bg-orange-500 border-orange-500 hover:bg-orange-600" type="button"
              data-action="click->user-data#validateForm">
              <p>Next</p>
            </button>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<% end %>
